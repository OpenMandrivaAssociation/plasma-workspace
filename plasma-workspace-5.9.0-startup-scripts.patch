-XftHintStyle=hintmedium
-XftSubPixel=none
-EOF
+cp -f /etc/xdg/kdeglobals $kdeglobalsfile
+}
+
+startupconfigkeysfile=$configDir/startupconfigkeys
+test -f $startupconfigkeysfile || {
+cp -f /etc/xdg/startupconfigkeys $configDir/startupconfigkeys
 }
 
